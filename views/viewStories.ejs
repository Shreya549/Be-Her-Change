<!DOCTYPE html>
<html>
    <head>
    <link rel="stylesheet" type="text/css" href="./public/8_2)ViewStories.css">
    <style>
        body {
          margin: 0;
          font-family: Arial, Helvetica, sans-serif;
        }
        
        .topnav {
          overflow: hidden;
          background-color: #333;
        }
        
        .topnav a {
          float: left;
          color: #f2f2f2;
          text-align: center;
          padding: 20px 75px;
          text-decoration: none;
          font-size: 17px;
        }
        
        .topnav a:hover {
          background-color: #ddd;
          color: black;
        }
        
        .topnav a.active {
          background-color: darkmagenta;
          color: white;
        }
    </style>
    </head>
    <body>
        <div class="topnav">
          <a href="/home">Home</a>
          <a href="/confess">Confess</a>
          <a href="/helpline">Helpline</a>
          <a href="/employment">Employment</a>
          <a class="active" href="/view_stories">View Stories</a>
          </div>
          <div style="padding-left:16px;">
              <h1>
                  <center>STORIES</center>
              </h1>
          </div>
         
        <ul id="story-list">
          <% for(var i=0; i < result.length; i++) { %>  
            <li><%= result[i]['story'] %></li>
          <% } %>       
        </ul>
    </body>
</html>
